<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0002-1" author="admin">
        <createTable tableName="book">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(100)"/>
            <column name="author" type="VARCHAR(50)"/>
            <column name="publisher" type="VARCHAR(50)"/>
            <column name="release_year" type="INT"/>
            <column name="short_description" type="VARCHAR(200)"/>
            <column name="description" type="VARCHAR(10000)"/>
            <column name="promoted" type="BOOLEAN"/>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_book_category"
                             referencedTableName="category"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>